<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".all.all.quanlyhoadon"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnnewhoadon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new hóa đơn"
            android:onClick="newhoadon"/>

        <Button
            android:id="@+id/btnupdatehoadon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update hóa đơn"
            android:onClick="updatehoadon"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvhoadon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>