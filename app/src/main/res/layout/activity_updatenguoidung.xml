<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".all.all.updatenguoidung"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgupdate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/update"
        android:onClick="imgupdate"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Update thông tin người dùng"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtmaupdate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập mã người dùng update"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btntim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:onClick="tim" />
    </LinearLayout>

    <EditText
        android:id="@+id/edthotennguoidungupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Họ và Tên người đăng ký"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtsodienthoainguoidungupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Số điện thoại"
        android:inputType="number" />

    <EditText
        android:id="@+id/edtpassnguoidungupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mật Khẩu"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edtpassnguoidungx2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập Lại mật khẩu "
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btndangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="updateuser"
            android:text="Update" />

        <Button
            android:id="@+id/btnhuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hủy"
            android:onClick="huyupdate"/>
    </LinearLayout>

</LinearLayout>