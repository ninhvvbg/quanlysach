<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".all.all.quanlysach"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnnewsach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="newsach"
            android:text="New sách mới" />

        <Button
            android:id="@+id/btnupdatesach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="updatesach"
            android:text="Update sách" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvsach"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>